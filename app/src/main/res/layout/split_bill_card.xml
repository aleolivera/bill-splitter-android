<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    style="?attr/materialCardViewOutlinedStyle">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSplitCardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/tvSplitCardAction"
            android:gravity="center"

            android:paddingStart="20sp"
            android:paddingTop="10sp"
            android:paddingEnd="5sp"
            android:paddingBottom="10sp"

            style="@style/TextCardSplitBillTitle"
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/tvSplitCardTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"

            android:paddingStart="5sp"
            android:paddingEnd="20sp"
            android:paddingTop="10sp"
            android:paddingBottom="5sp"

            style="@style/TextCardSplitBillBody"/>

        <TextView
            android:id="@+id/tvSplitCardAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvSplitCardTotal"

            android:paddingStart="4sp"
            android:paddingEnd="20sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"

            style="@style/TextCardSplitBillActionPositive"/>

        <CheckBox
            android:id="@+id/ckSplitCardIsPaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/tvSplitCardName"
            android:layout_below="@id/tvSplitCardAction"
            android:layout_alignParentEnd="true"
            android:gravity="top"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingStart="5sp"
            android:paddingBottom="10sp"
            android:text="@string/chk_label"
            android:textAppearance="@style/TextCardSplitBillCkLabel"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>